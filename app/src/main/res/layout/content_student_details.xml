<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.john.project3.StudentDetailsActivity"
    tools:showIn="@layout/activity_student_details">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/skills_title"
            android:gravity="center"
            android:background="@color/gaGrey"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/ratingBar1"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:padding="3dp"
            android:textSize="16sp"
            android:text="@string/skills_header" />

        <ImageView
            android:id="@+id/details_robot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/skills_title"
            android:layout_above="@+id/details_skills"
            android:src="@drawable/robot"
            />

        <TextView
            android:id="@+id/details_skills"
            android:background="@color/gaGrey"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_below="@id/skills_title"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="@dimen/text_margin"
            android:padding="3dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/open_title"
            android:background="@color/gaGrey"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/details_skills"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:padding="3dp"
            android:gravity="center"
            android:text="@string/open_header"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/details_open"
            android:background="@color/gaGrey"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/open_title"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="@dimen/text_margin"
            android:padding="3dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/details_ga_profile"
            android:background="@color/gaGrey"
            android:drawableLeft="@drawable/ga_logo_black"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/details_open"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
             />

        <Button
            android:id="@+id/details_linkedin"
            android:background="@color/gaGrey"
            android:drawableLeft="@drawable/linkedin_logo_icon"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/details_ga_profile"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/details_github"
            android:background="@color/gaGrey"
            android:drawableLeft="@drawable/github_icon"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/details_linkedin"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/details_other"
            android:background="@color/gaGrey"
            android:drawableLeft="@drawable/icon_briefcase"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/details_github"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/details_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/details_other"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:background="@color/gaYellow"
            android:drawableLeft="@drawable/email_icon"
            android:gravity="center"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/call_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/details_email"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:background="@color/gaGreen"
            android:drawableLeft="@drawable/phone_icon"
            android:gravity="center"
            android:textSize="14sp"
            android:text="Call" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
